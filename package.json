{
  "name": "@linusborg/vue-simple-portal",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "lint": "vue-cli-service lint src/**/*.js demo/**/*.js tests/**/*.js ./*.js",
    "serve": "vue-cli-service serve demo/main.js",
    "build": "vue-cli-service build --target lib --name VueSimplePortal --dest package/dist src/index.js",
    "build:bili": "rimraf -r package/dist && bili --format umd --format umd-min --format es --module-name VueSimplePortal -d package/dist",
    "build:demo": "vue-cli-service build demo/main.js",
    "sb:build": "vue-cli-service storybook:build -c stories/config",
    "sb:serve": "vue-cli-service storybook:serve -p 6006 -c stories/config",
    "sb:dev": "concurrently 'vue-devtools' 'vue-cli-service storybook:serve -p 6006 -c stories/config'",
    "test:e2e": "vue-cli-service test:e2e",
    "test:unit": "vue-cli-service test:unit"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^4.1.0 || ^5.0.0",
    "@storybook/addon-knobs": "^4.1.0 || ^5.0.0",
    "@storybook/addon-links": "^4.1.0 || ^5.0.0",
    "@storybook/addon-notes": "^4.1.0 || ^5.0.0",
    "@vue/cli-plugin-babel": "^3.4.0",
    "@vue/cli-plugin-e2e-cypress": "^3.4.0",
    "@vue/cli-plugin-eslint": "^3.4.0",
    "@vue/cli-plugin-unit-jest": "^3.4.0",
    "@vue/cli-service": "^3.4.0",
    "@vue/devtools": "^5.0.0-beta.5",
    "@vue/eslint-config-prettier": "^4.0.1",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "bili": "^4.7.2",
    "concurrently": "^4.1.0",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^8.1.0",
    "nanoid": "^2.0.1",
    "prettier-eslint": "^8.8.2",
    "rimraf": "^2.6.3",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-vue": "^4.7.2",
    "vue": "^2.6.9",
    "vue-cli-plugin-storybook": "^0.6.1",
    "vue-template-compiler": "^2.6.9"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "peerDependencies": {
    "vue": "^2.6.9"
  }
}
